---

- hosts: 
  become: true
  tasks:
  
  - name: install apache and php on Ubuntu
    tags: apache2,php,ubuntu
    apt:
      name:
        - apache2
        - libapache2-mod-php
      state: latest
      update_cache: yes
    when: ansible_distribution == "Ubuntu"

  - name: install apache and php on CentOS
    tags: centos, httpd
    dnf:
      name:
        - httpd
        - php
      state: latest
      update_cache: yes
    when: ansible_distribution == "CentOS"

- hosts: web-servers
  become: true
  tasks:

  - name: install apache2 on user2
    tags: web 
    apt:
      name:
        - apache2
      state: latest
      update_cache: yes
    when: ansible_distribution == "Ubuntu"
